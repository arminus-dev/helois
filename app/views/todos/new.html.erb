<h1>New todo</h1>

<%= form_for(@todo) do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :expected_duration, "Expected duration(In hours)" %><br />
    <%= f.text_field :expected_duration %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br />
    <%#= f.datetime_select :due_date %>
    <%= f.text_field :due_date, :class=>'select_date' %>
  </div>
  <div class="field">
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit %> | <%= link_to 'Cancel', todos_path %>
  </div>
<% end %>



