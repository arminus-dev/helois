<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= stylesheet_link_tag :all %>
    <link rel="stylesheet" href="/javascripts/jquery-ui/development-bundle/themes/base/jquery.ui.all.css">
<%#= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag "jquery-1.5.1.min","rails","custom","jquery-ui/development-bundle/ui/jquery.ui.core","jquery-ui/development-bundle/ui/jquery.ui.widget","jquery-ui/development-bundle/ui/jquery.ui.datepicker","jquery.tablesorter" %>

  </head>
  <body>
    <div id="nav">
      <% if current_user %>
        <%= current_user.email %>
        <%= link_to "Todos", todos_path %> |
        <%= link_to "Edit Profile", edit_user_path(current_user.id)%> |
        <%= link_to "Logout", :logout%>
      <% else %>
        <%= link_to "Register", new_user_path%> |
        <%= link_to "Login", :login %>
      <% end %>
    </div>
    <div id="container">
      <%= yield %>
    </div>

  </body>
</html>
